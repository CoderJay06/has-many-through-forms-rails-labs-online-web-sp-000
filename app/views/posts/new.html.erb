<%= render 'form', post: Post.new %>
<%= form_for @post do |f| %>
   <%= f.label 'Title' %>
   <%= f.text_field :title %>
   <br>
   <%= f.label 'Content'%>
   <%= f.text_field :content %>
   <br>
   <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
   <%= f.fields_for :categories, @post.categories.build do |category_fields| %>
      <%= category_fields.label :category %>
      <%= category_fields.text_field :name %>
   <% end %>
   <%= f.submit "Create Post" %>
<% end %>